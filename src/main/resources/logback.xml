    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>tjmcp.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="FILE"/>
    </root>
    <!--    <logger name="com.github.tjake.jlama" level="DEBUG"/>-->
    <logger name="es.nachobrito.tjmcp" level="DEBUG"/>
    <logger name="io.micronaut.mcp" level="DEBUG"/>
